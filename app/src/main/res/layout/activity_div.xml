<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6ffb0">


    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout2"
        android:layout_alignParentBottom="true"

        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button1"
            android:background="@drawable/icon_1"
            android:layout_alignTop="@+id/button2"
            android:layout_toStartOf="@+id/button0"
            android:layout_alignRight="@+id/button0"
            android:layout_alignEnd="@+id/button0"
            android:layout_gravity="left|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button2"
            android:background="@drawable/icon_2"
            android:layout_below="@+id/button7"
            android:layout_toRightOf="@+id/button0"
            android:layout_toEndOf="@+id/button0"
            android:layout_gravity="center_horizontal|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button3"
            android:background="@drawable/icon_3"
            android:layout_below="@+id/button7"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_gravity="right|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/b_tran"
            android:background="@drawable/icon_4"
            android:layout_below="@+id/button1"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="37dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button5"
            android:background="@drawable/icon_5"
            android:layout_alignTop="@+id/b_tran"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9"
            android:layout_gravity="center"
            android:layout_marginBottom="37dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button6"
            android:background="@drawable/icon_6"
            android:layout_alignTop="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="37dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button7"
            android:background="@drawable/icon_7"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button6"
            android:layout_toStartOf="@+id/button6"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="75dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button8"
            android:background="@drawable/icon_8"
            android:layout_alignBaseline="@+id/button0"
            android:layout_alignBottom="@+id/button0"
            android:layout_alignLeft="@+id/tv_score"
            android:layout_alignStart="@+id/tv_score"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="75dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button9"
            android:background="@drawable/icon_9"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="75dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button0"
            android:background="@drawable/icon_0"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"

             />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/b_ok"
            android:layout_gravity="right|bottom"
            android:minHeight="100dp"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/icon_done" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/button"
            android:layout_gravity="left|bottom"
            android:background="@drawable/icon_delete" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:id="@+id/frameLayout2"
>

        <TextView
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:id="@+id/tv_num2"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="@drawable/green"
            android:textColor="#ffffff"
            android:minHeight="50dp"
            android:minWidth="75dp"
            android:layout_gravity="center|right"
            android:layout_below="@+id/tv_score"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textIsSelectable="false"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:id="@+id/textView"
            android:textSize="70dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textColor="#ff0000"
            android:singleLine="false"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/tv_num2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:id="@+id/tv_num1"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="@drawable/green"
            android:textColor="#ffffff"
            android:minHeight="50dp"
            android:minWidth="75dp"
            android:layout_gravity="left|center"
            android:layout_alignTop="@+id/tv_num2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textIsSelectable="false"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/tv_score"
            android:textStyle="bold"
            android:textSize="35dp"
            android:numeric="integer"
            android:inputType="number"
            android:background="#1e2bd8"
            android:layout_alignWithParentIfMissing="false"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_alignBottom="@+id/tv_time"
            android:autoText="false"
            android:textColor="#55ff00"
            android:allowUndo="false"
            android:layout_gravity="right"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resulte"
            android:textSize="45dp"
            android:autoText="false"
            android:background="@drawable/abc_menu_hardkey_panel_mtrl_mult"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#0000ff" />

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:layout_gravity="top"
            android:background="@drawable/button">

            <TextView
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:id="@+id/textView2"
                android:textSize="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tv_resulte"
                android:layout_toStartOf="@+id/tv_resulte"
                android:textAlignment="center"
                android:background="@drawable/time"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center"
                android:textColor="#08ffe6"
                android:layout_gravity="left|center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:textSize="50dp"
                android:text="10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tv_resulte"
                android:layout_toStartOf="@+id/tv_resulte"
                android:textAlignment="center"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:textColor="@color/material_blue_grey_950" />
        </FrameLayout>

        <TextView
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:id="@+id/textView3"
            android:textSize="28dp"
            android:text="Best : 100"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tv_resulte"
            android:layout_toStartOf="@+id/tv_resulte"
            android:textAlignment="center"
            android:background="@drawable/abc_list_longpressed_holo"
            android:textColor="#ffd500"
            android:textStyle="bold"
            android:layout_gravity="right|top"
            android:layout_marginLeft="188dp" />

    </FrameLayout>


</RelativeLayout>
